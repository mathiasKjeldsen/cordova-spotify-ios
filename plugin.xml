<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-spotify-ios" version="0.0.1">
    <name>SpotifySDKPlugin</name>
    <description>Cordova Spotify iOS SDK Plugin</description>
    <js-module src="www/SpotifySDKPlugin.js" name="SpotifySDKPlugin">
        <clobbers target="SpotifySDKPlugin" />
    </js-module>
    <platform name="ios">
        <hook type="before_plugin_install" src="install-ios.sh" />
        <config-file target="config.xml" parent="/*">
            <feature name="SpotifySDKPlugin">
                <param name="ios-package" value="SpotifySDKPlugin"/>
            </feature>
        </config-file>
        <header-file src="src/ios/cordova-spotify-ios-Bridging-Header.h" />
        <source-file src="src/ios/SpotifySDKPlugin.swift" />
    </platform>
</plugin>